<?xml version="1.0" encoding="UTF-8"?>
<scenario>
    <!--Obstacles-->
  <obstacle x1="0" y1="0" x2="20" y2="0"/>
  <obstacle x1="0" y1="0" x2="0" y2="20"/>
  <obstacle x1="0" y1="20" x2="20" y2="20"/>
  <obstacle x1="20" y1="20" x2="20" y2="0"/>

  <!--Waypoints (incl. WaitingQueues)-->
  <waypoint id="bookshop_entry" x="3" y="3" r="1"/>
  <waypoint id="bookshop_exit" x="17" y="3" r="1"/>

  <waypoint id="coffee_entry" x="17" y="17" r="1"/>
  <waypoint id="coffee_exit" x="3" y="17" r="1"/>

  <waypoint id="robot_start" x="1" y="1" r="2"/>
  <waypoint id="robot_goal" x="19" y="19" r="2"/>

  <queue id="info_desk" x="10" y="10" direction="0"/>

    <!--Agents-->
    <!--<agent x="1" y="1" n="1" dx="0" dy="0" type="0">
        <addwaypoint id="robot_start"/>
        <addwaypoint id="robot_goal"/>
    </agent> -->
    <agent x="3" y="3" n="1" dx="3" dy="3" type="1">
        <addwaypoint id="bookshop_entry"/>
        <addwaypoint id="bookshop_exit"/>
        <addwaypoint id="coffee_entry"/>
        <addwaypoint id="coffee_exit"/>
    </agent>
    <agent x="17" y="17" n="1" dx="3" dy="3" type="1">
        <addqueue id="info_desk"/>
        <addwaypoint id="bookshop_exit"/>
        <addwaypoint id="coffee_entry"/>
        <addwaypoint id="coffee_exit"/>
    </agent>
    <agent x="17" y="3" n="1" dx="3" dy="3" type="1">
        <addwaypoint id="bookshop_entry"/>
        <addwaypoint id="coffee_entry"/>
    </agent>
    <agent x="3" y="17" n="1" dx="3" dy="3" type="1">
        <addwaypoint id="coffee_exit"/>
        <addwaypoint id="bookshop_exit"/>
    </agent>

</scenario>
